extends layout.pug

block content
	if message == 'missingField'
		p One or more fields missing.
	if message == 'userExists'
		p User #{newUser.username} already exists.
	if message == 'success'
		p New user added!
		p Username: #{newUser.username}
		p Password: #{newUser.password}
	
	p Please complete the following form.
	form(method = "post" action = "/admin/newUser")
		div.form-group
			label(for='username') Username:
			input(type = 'text', name = "username")
		div.form-group
			label(for='firstname') First name:
			input(type = 'text', name = "firstname")
		div.form-group
			label(for='lastname') Last name:
			input(type = 'text', name = "lastname")
		div.form-group
			label(for='role') User Role:
			- const roles = [{name: 'Administrator', value: 'admin'}, {name: 'Instructor', value: 'instructor'}, {name:'Student', value: 'student'}]
			select(name = 'role')
				each role in roles
					option(value = (role.value)) #{role.name}
		p An initial password will be assigned automatically.
		div.form-group
		button(type = "submit" name = "button_id" value = "submit") Complete Registration
		div.form-group
		button(type = "submit" name = "button_id" value = "cancel") Return to Homepage
		